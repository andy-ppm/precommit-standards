echo 'ğŸ¨ Running Prettier and ESLint on staged files...'

# Relevant staged files
PRETTIER_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|ts|jsx|tsx|json|css|md|yml)$' | sed 's| |\\ |g')
ESLINT_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|ts|jsx|tsx)$' | sed 's| |\\ |g')

# Error flag
HAS_ERROR=0

# Apply Prettier
if [ -n "$PRETTIER_FILES" ]; then
  echo 'ğŸ–Œ Formatting with Prettier...'
  prettier $PRETTIER_FILES --write --list-different --ignore-unknown || {
    echo "âŒ Error: Prettier found problems that he couldn't correct.."
    HAS_ERROR=1
  }
fi

# Apply ESLint
if [ -n "$ESLINT_FILES" ]; then
  echo 'ğŸ§¹ Running ESLint...'
  eslint $ESLINT_FILES --fix || {
    echo 'âŒ Error: ESLint found errors that it could not automatically correct.'
    HAS_ERROR=1
  }
fi

# Clean .next folder silently
rm -rf .next 2>/dev/null

# Run TypeScript type checking
echo 'ğŸ” Checking TypeScript types...'
npm run check-types || {
  echo 'ğŸ¤¡ğŸ˜‚âŒğŸ¤¡ Failed Type check. ğŸ¤¡ğŸ˜‚âŒğŸ¤¡
        Are you seriously trying to write that? Make the changes required above.'
  HAS_ERROR=1
}

# Cancel commit if any errors were found
if [ $HAS_ERROR -ne 0 ]; then
  echo 'â›” Commit aborted due to lint, format or type errors.'
  exit 1
fi

# Reindexes modified files
echo "$PRETTIER_FILES" "$ESLINT_FILES" | xargs git add

echo 'âœ… Files formatted, fixed, and ready for commit.'
